    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch MPI gameoflife",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/gameoflife_mpi",
            "args": ["30", "80", "10", "3", "4"],
            "stopAtEntry": false,
            "preLaunchTask": "build gameoflife_mpi",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {"engineLogging": true}
        },
        {
